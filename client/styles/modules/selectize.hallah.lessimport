.selectize-input {
  -webkit-box-shadow: none;
  background-color: rgba(0, 0, 0, 0.1);
  border: none;
  border-radius: 0;
  background-color: transparent;
  .placeholder(rgba(0, 0, 0, .5));

  &:after {
    border-color: transparent;
  }
}
